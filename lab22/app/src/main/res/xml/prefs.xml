<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory>
        android:title="Enable Night Mode">
        <CheckBoxPreference
            android:title="Night Mode"
            android:key="NIGHT"
            android:defaultValue="false"
            android:summaryOn="Night mode is activated"
            android:summaryOff="Night mode is deactivated" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Font Size">
        <ListPreference
            android:title="Size"
            android:key="Size"
            android:entries="@array/items_name"
            android:entryValues="@array/item_value"
            />
    </PreferenceCategory>

    <PreferenceCategory>
        <ListPreference
            android:title="Language"
            android:key="Language"
            android:entries="@array/items_language"
            android:entryValues="@array/item_value"
    />
    </PreferenceCategory>

</PreferenceScreen>