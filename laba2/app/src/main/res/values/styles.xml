<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppThemeLite" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorButtonNormal">@color/yellow</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">#F3950B</item>
        <item name="colorButtonNormal">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="TinySizeStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="MiddleSizeStyle">
        <item name="android:textSize">21sp</item>
    </style>
    <style name="BigSizeStyle">
        <item name="android:textSize">30sp</item>
    </style>
</resources>